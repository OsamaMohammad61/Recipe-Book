<%- include('../partials/header') %>

<div class="center">
  <div class="split left">
 
<h3>Cuisine: <%= recipe.cuisine%></h3>
<h3>Dish Name: <%= recipe.Dish%></h3>
<h3>Time: <%= recipe.Time%></h3>
<h3>Ingredents: <%for (let i=0 ;i <recipe.Ingredients.length; i++){%></h3>
  <p><%=recipe.Ingredients[i]%></p><%}%>
<h5>Steps:<br><%=recipe.Steps%></h5>
  </div>

<div class="split right">
<br><br><h3>Reviews</h3>
<% if (user) { %>
<form action="/recipe/<%=recipe._id%>/addReview" method="POST">
    <label> Enter the title of Review <br>
    <input id="review-box" type="text" name="heading" placeholder="Title">
    </label><br><br>
    <label> Write the Review <br> 
        <input id="review-box" type="text" name="detail" placeholder="review">
    </label><br><br>
    <label> Rate it <br>
        <select id="review-box" name="rate">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </label><br>
    <input type="hidden" name="dish" value="<%=recipe.Dish%>">
    <input type="submit">
  
</form>
<form action="/recipe/<%=recipe._id%>?_method=DELETE" method="POST">
  <button id="review-btn" type="submit">Delete Recipe</button></form>
<%recipe.reviewon.forEach((re)=>{%>
  <%=re.heading%>
  <%=re.rate%>

   <form action="/review/<%= re._id %>" method="POST">
    <input id="review-btn" type="hidden" name="recipeId" value="<%= recipe._id %>">
    <button>Details</button>
  </form>


  <a href="/recipes/<%= recipe.id %>/edit">Edit</a>

  <%})%>
  <%}%>
</div>
</div>

<%- include('../partials/footer') %>
